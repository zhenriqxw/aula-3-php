            <option value="maior_igual">Maior ou igual (>=)</option>\par
        </select><br>\par
        <input type="submit" value="Comparar">\par
    </form>\par
</body>\par
</html>\par
\cf0 --------------------------\par
\par
\b comparador.php\par
--------------------------\par
